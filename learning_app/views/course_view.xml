<odoo>


    <record id="course_view_tree" model="ir.ui.view">
        <field name="name">course tree</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="code"/>
                    <field name="description" optional="1"/>
                </list>
        </field>
    </record>


    <record id="course_view_form" model="ir.ui.view">
    <field name="name">course form</field>
    <field name="model">course</field>
    <field name="arch" type="xml">
        <form>
                    <sheet>
                      <header>
                                <button name="action_draft" type="object" string="Set To Draft" invisible="state == 'draft'"/>
                                <button name="action_pending" type="object" string="Set To Pending" invisible="state != 'draft'"/>
                                <button name="action_confirm" type="object" string="Set To Sold" invisible="state !='pending'"/>
                                <field name="state" widget="statusbar"/>
<!--                          <field name="state" widget="statusbar" statusbar_visible="confirm,draft" options="{'clickable':True}"/>-->
                      </header>



                        <div class="oe_title"> <!-- oe-title is a bootstrap class -->
                            <label for="name"/>
                                 <h1>
                                       <field name="name"/>
                                 </h1>
                        </div>
                        <group>
                             <group string="Genearal Info.">

                                <field name="name"/>
                                 <b>
                                     <field name="student_count"/>

                                 </b>
                                 <field name="expected_price"/>
                                 <field name="real_price"/>
                                 <field name="diff"/>

                            </group>
                            <group string="Additional Info.">
                                    <field name="code"/>
                            </group>
                            <group>
                                  <field name="description" required="1"/>
                            </group>
                        </group>

                    </sheet>
                </form>
    </field>
  </record>

