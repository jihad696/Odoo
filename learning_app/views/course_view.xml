<odoo>
    <!-- list View -->
    <record id="course_view_list" model="ir.ui.view">
        <field name="name">course.list</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state"/>
                <field name="code"/>
                <field name="student_count"/>
            </list>
        </field>
    </record>

    <!-- Form View - SIMPLIFIED -->
    <record id="course_view_form" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <!-- SIMPLE BUTTONS - no states/attrs -->
                        <button name="action_draft" type="object" string="Set To Draft"/>
                        <button name="action_pending" type="object" string="Set To Pending"/>
                        <button name="action_confirm" type="object" string="Confirm"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="teacher_id"/>
                            <field name="student_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="description"/>
                        </group>
                    </group>

                    <field name="student_ids" widget="many2many_tags"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">course</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>