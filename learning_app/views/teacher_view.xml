<odoo>


        <!-- Tree View -->
    <record id="teacher_view_tree" model="ir.ui.view">
        <field name="name">teacher.list</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="subject"/>
                <field name="hire_date"/>
            </list>
        </field>
    </record>


    <record id="teacher_view_form" model="ir.ui.view">
        <field name="name">teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Teacher Info">
                        <field name="name"/>
                        <field name="hire_date"/>
                        <field name="subject"/>
                        <field name="course_ids" widget="many2many_tags"/>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">teacher</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">list,form</field>


    </record>


    <menuitem id="teacher_ment_view"
              name="Teachers"
              parent="configurations_menu"
              action="teacher_action"/>
</odoo>