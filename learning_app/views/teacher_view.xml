<odoo>
    <!-- list View -->
    <record id="teacher_view_list" model="ir.ui.view">
        <field name="name">teacher.list</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="subject"/>
                <field name="hire_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="teacher_view_form" model="ir.ui.view">
        <field name="name">teacher.form</field>
        <field name="model">teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hire_date"/>
                        <field name="subject"/>
                        <field name="course_ids" widget="many2many_tags"/>
                        <field name="student_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">teacher</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>