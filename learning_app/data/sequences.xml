<!-- data/sequences.xml -->
<odoo>
    <data noupdate="1">
        <!-- Student Sequence -->
        <record id="seq_student_id" model="ir.sequence">
            <field name="name">Student ID Sequence</field>
            <field name="code">school.student</field>
            <field name="prefix">STU/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Teacher Sequence -->
        <record id="seq_teacher_id" model="ir.sequence">
            <field name="name">Teacher ID Sequence</field>
            <field name="code">school.teacher</field>
            <field name="prefix">TCH/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Enrollment Sequence -->
        <record id="seq_enrollment_id" model="ir.sequence">
            <field name="name">Enrollment Number Sequence</field>
            <field name="code">school.enrollment</field>
            <field name="prefix">ENR/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>