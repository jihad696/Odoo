<odoo>
    <data>
        <!-- User Groups -->
        <record id="group_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_teacher" model="res.groups">
            <field name="name">Teacher</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Record Rules -->
        <record id="student_record_rule" model="ir.rule">
            <field name="name">Student Personal Record Rule</field>
            <field name="model_id" ref="model_student"/>
            <field name="groups" eval="[(4, ref('group_student'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>
    </data>
</odoo>
