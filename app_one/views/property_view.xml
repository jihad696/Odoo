<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <list multi_edit="1" edit="1" create="1" delete="1 " class="header_custom" decoration-danger="(is_late)">
                <field name="ref"/>
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="state"/>
                <field name="is_late" invisible="1"/>
                <field name="owner_id"/>
                <field name="date_availability"/>
                <field name="state"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name="facades"/>
                <field name="postcode" groups="app_one.property_manager_group"/>
                <field name="active"/>
                <field name="garden_oreintation"/>
                <field name="garden_area" optional="1"/>
                <field name="garage" optional="1"/>
            </list>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form multi_edit="1" edit="1" create="1" delete="0">
                <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <widget name="web_ribbon" title="Sold" bg_color="text-bg-success" invisible="state != 'sold'"/>
                    <header>
                        <button name="action_draft" type="object" class="btn-primary"
                                string="Set To Draft" invisible="state in ('draft','closed')"/>
                        <button name="action_pending" type="object" class="btn-secondary"
                                string="Set To Pending" invisible="state != 'draft'"/>
                        <button name="action_sold" type="object" class="btn-danger"
                                string="Set To Sold" invisible="state != 'pending'"/>

                        <field name="state" widget="statusbar"/>


<!--   if you won't create button  <field name="state" widget="statusbar" statusbar_visible="sold,draft" options="{'clickable':True}"/>-->
                    </header>

                    <div class="oe_title"> <!-- oe-title is a bootstrap class -->
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                    </div>


                    <div class="oe_title"> <!-- oe-title is a bootstrap class -->
                        <label for="name"/>
                        <h4>
                            <field name="name" readonly="state == 'closed'"/>
                        </h4>
                    </div>

                    <group>
                        <group string="Genearal Info.">
                            <field name="date_availability" readonly="state == 'closed'"/>
                            <field name="expected_price" readonly="state == 'closed'"/>
                            <field name="selling_price" readonly="state == 'closed'"/>
                            <field name="is_late" invisible="1"/>
                            <field name="diff" readonly="state == 'closed'"/>
                            <field name="garden" readonly="state == 'closed'"/>
                            <field name="owner_id" readonly="state == 'closed'"/>
                            <field name="owner_address" readonly="state == 'closed'"/>
                            <field name="owner_phone" readonly="state == 'closed'"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="bed_rooms" readonly="state == 'closed'"/>
                            <field name="active" readonly="state == 'closed'"/>
                        </group>

                        <group string="Additional Info.">

                            <field name="facades" readonly="state == 'closed'"/>
                            <field name="garden_oreintation" readonly="state == 'closed'"/>
                            <field name="garden_area" readonly="state == 'closed'"/>
                            <field name="garage" readonly="state == 'closed'"/>
                            <field name="postcode" groups="app_one.property_manager_group" readonly="state == 'closed'"/>
                            <field name="expected_price" readonly="state == 'closed'"/>
                        </group>

                        <group>
                            <field name="description" required="1"/>
                        </group>

                        <group>


                            <button name="action"
                                    type="object"
                                    class="btn-danger"
                                    string="Active"/>


                        </group>

                    </group>
                        <notebook>
                            <page string="Bedrooms">
                                <field name="line_ids">
                                    <list editable="bottom">  <!--if you don't wanna popup window add editable attribute-->
                                        <field name="area"/>
                                        <field name="description"/>
                                    </list>
                                </field>
                            </page>
                    </notebook>

                </sheet>

                <chatter class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode" groups="app_one.property_manager_group"/>
                <field name="name"/>


                <filter name="with_garden" string="With Garden" domain="[('garden','=',True)]"/>
                <filter name="without_garden" string="Without Garden" domain="[('garden','=',False)]"/>
                <filter name="with_garage" string="With Garage" domain="[('garage','=',True)]"/>
                <filter name="group_by_garden" string="Garden" context="{'group_by':'garden'}"/>
            </search>
        </field>
    </record>

    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="property_closed_server_action" model="ir.actions.server">
        <field name="name">Property closed action server</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_closed()
        </field>
    </record>

    <record id="property_change_state_server_action" model="ir.actions.server">
        <field name="name">Change State</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action=records.action_open_change_state_wizard()

        </field>
    </record>


    <record id="check_property_cron" model="ir.cron">
        <field name="name">Property: Check expected selling date</field>
        <field name="model_id" ref="model_property"/> <!-- replace with your module and model -->
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>



    <menuitem id="property_ment_item"
              name="properties"
              parent="properties_menu"
              action="property_action"/>

</odoo>
