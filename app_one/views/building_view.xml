<odoo>
    <!-- Tree View -->
    <record id="building_view_tree" model="ir.ui.view">
        <field name="name">building tree</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <list multi_edit="1" edit="1" create="1" delete="0" class="header_custom">
                <field name="no"/>
                <field name="code"/>
                <field name="active"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="building_view_form" model="ir.ui.view">
        <field name="name">building form</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <form multi_edit="1" edit="1" create="1" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="no"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" required="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="building_view_search" model="ir.ui.view">
        <field name="name">building search</field>
        <field name="model">building</field>
        <field name="arch" type="xml">
            <search>
                <field name="no"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <!-- Action -->

    <record id="building_action" model="ir.actions.act_window">
        <field name="name">Building</field>
        <field name="res_model">building</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="building_view_tree"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="building_menu_item"
              name="Building"
              parent="properties_menu"
              action="building_action"/>
</odoo>
