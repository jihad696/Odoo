<odoo>
    <record id="owner_view_tree" model="ir.ui.view">
        <field name="name">owner tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="property_ids"/>
                    <field name="phone_number"/>
                    <field name="address"/>

                </list>

        </field>
    </record>

    <record id="owner_view_form" model="ir.ui.view">
    <field name="name">owner form</field>
    <field name="model">owner</field>
    <field name="arch" type="xml">
        <form>
                <sheet>
                    <group>
                        <div>
                            <h1>
                                <label for="name"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="phone_number"/>
                        </group>
                        <group>
                                <field name="address"/>
                                <field name="property_ids" widget="many2many_tags" delete="0"/>
                        </group>
                    </group>
                </sheet>
        </form>
    </field>
  </record>




    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">Owner</field>
        <field name="res_model">owner</field>
        <field name="view_mode">list,form</field>

    </record>

    <menuitem id = "owner_ment_item"
              name = "owner"
              parent = "properties_menu"
              action = "owner_action"
    />

</odoo>




