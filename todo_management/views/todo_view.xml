<odoo>


    <record id="todo_view_tree" model="ir.ui.view">
        <field name="name">todo list</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="username"/>
                    <field name="status"/>
                    <field name="description"/>
                    <field name="due_date"/>
                </list>

        </field>
    </record>

    <record id="todo_view_form" model="ir.ui.view">
    <field name="name">todo form</field>
    <field name="model">todo.task</field>

    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                            <div>
                                    <label for="name"/>
                                    <h1>
                                        <field name="name"/>
                                    </h1>
                           </div>


                            <field name="due_date"/>
                            <field name="status"/>
                            <field name="username"/>
                    </group>
                    <group>
                            <field name="description"/>
                            <field name="user_id"/>
                    </group>

                </group>
            </sheet>
        </form>
    </field>
</record>



