<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Payment Transaction list View -->
        <record id="view_payment_transaction_list" model="ir.ui.view">
            <field name="name">school.payment.transaction.list</field>
            <field name="model">school.payment.transaction</field>
            <field name="arch" type="xml">
                <list string="Payment Transactions"
                      decoration-success="state == 'reconciled'"
                      decoration-info="state == 'confirmed'"
                      decoration-muted="state == 'cancelled'">
                    <field name="name"/>
                    <field name="payment_date"/>
                    <field name="student_id"/>
                    <field name="student_invoice_id"/>
                    <field name="amount" widget="monetary"/>
                    <field name="payment_method"/>
                    <field name="payment_reference"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'reconciled'"
                           decoration-info="state == 'confirmed'"
                           decoration-warning="state == 'draft'"/>
                    <field name="currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Payment Transaction Form View -->
        <record id="view_payment_transaction_form" model="ir.ui.view">
            <field name="name">school.payment.transaction.form</field>
            <field name="model">school.payment.transaction</field>
            <field name="arch" type="xml">
                <form string="Payment Transaction">
                    <header>
                        <button name="action_confirm" string="Confirm Payment" type="object"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_reconcile" string="Reconcile" type="object"
                                class="oe_highlight" invisible="state != 'confirmed'"/>
                        <button name="action_cancel" string="Cancel" type="object"
                                invisible="state in ['reconciled', 'cancelled']"
                                confirm="Are you sure you want to cancel this payment?"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                                invisible="state not in ['confirmed', 'cancelled']"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,reconciled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="student_invoice_id"
                                       options="{'no_create': True}"/>
                                <field name="student_id" readonly="1"/>
                                <field name="invoice_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="payment_date"/>
                                <field name="amount" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="invoice_amount_due" widget="monetary"
                                       decoration-danger="amount > invoice_amount_due"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="payment_method"/>
                                <field name="payment_reference"
                                       placeholder="Check number, transaction ID, etc."/>
                            </group>
                            <group>
                                <field name="account_payment_id" readonly="1"
                                       invisible="not account_payment_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes" placeholder="Additional notes about this payment..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Payment Transaction Search View -->
        <record id="view_payment_transaction_search" model="ir.ui.view">
            <field name="name">school.payment.transaction.search</field>
            <field name="model">school.payment.transaction</field>
            <field name="arch" type="xml">
                <search string="Payment Transactions">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="payment_reference"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Reconciled" name="reconciled" domain="[('state', '=', 'reconciled')]"/>
                    <separator/>
                    <filter string="This Month" name="this_month"
                            domain="[('payment_date', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('payment_date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Last Month" name="last_month"
                            domain="[('payment_date', '>=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')), ('payment_date', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                        <filter string="Payment Method" name="group_method" context="{'group_by': 'payment_method'}"/>
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Payment Date" name="group_date" context="{'group_by': 'payment_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_payment_transaction" model="ir.actions.act_window">
            <field name="name">Payment Transactions</field>
            <field name="res_model">school.payment.transaction</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_confirmed': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Record your first payment
                </p>
                <p>
                    Track all student fee payments here. Each payment is linked to a student invoice
                    and creates a complete audit trail.
                </p>
            </field>
        </record>

    </data>
</odoo>